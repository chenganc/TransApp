        <li><%= link_to "/users#edit" do%><span class="glyphicon glyphicon-pencil nav-glyphicon"></span><div class="nav-item"> Edit Users</div><%end%></li>
        <% end %>
        <hr class="divider"></hr>
        <li><%= link_to logout_path, method: "delete" do%><span class="glyphicon glyphicon-log-out nav-glyphicon"></span><div class="nav-item"> Log out</div><%end%></li>
        
        <% else %>
           <li><%= link_to login_path do  %><span class="glyphicon glyphicon-log-in nav-glyphicon"></span><div class="nav-item"> Log in</div><%end%></li>
