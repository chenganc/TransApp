    <div class="container navbar-header">
        <span id="menu" onclick="openNav()">
           &#9776;
        </span>
    </div>
    
    <div id="menu-title">
          TransApp
    </div>
    
    <div id="slidemenu">  
      <ul class="nav">
        <li class="nav-header">TransApp</li>
        <hr class="divider"></hr>
        <li><%= link_to root_path, data: { turbolinks: false } do %><span class="glyphicon glyphicon-home nav-glyphicon"></span><div class="nav-item"> Home</div><%end%></li>
        
        <% if logged_in? %>
        <li><%= link_to currentbuses_path, data: { turbolinks: false } do %><span class="glyphicon glyphicon-road nav-glyphicon"></span><div class="nav-item"> Active Buses</div><%end%></li>
        <% end %>
        
        <li><%= link_to help_path do %><span class="glyphicon glyphicon-question-sign nav-glyphicon"></span><div class="nav-item"> Help</div><%end%></li>      

        <li><%= link_to about_path do %><span class="glyphicon glyphicon-info-sign nav-glyphicon"></span><div class="nav-item"> About</div><%end%></li>  

        <% if !logged_in? %>
        <hr class="divider"></hr>
        <% end %>
        
        <% if logged_in? %>
        <br>
        <li class="nav-header">Account</li>
        <hr class="divider"></hr>
        <li><%= link_to current_user do%><span class="glyphicon glyphicon-user nav-glyphicon"></span><div class="nav-item"> Profile</div><%end%></li>
        <li><%= link_to edit_user_path(current_user) do%><span class="glyphicon glyphicon-cog nav-glyphicon"></span><div class="nav-item"> Edit profile</div><%end%></li>
